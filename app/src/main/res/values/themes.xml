<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DicodingStory" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/primary_700</item>
        <item name="colorPrimaryVariant">@color/primary_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/yellow_700</item>
        <item name="colorSecondaryVariant">@color/yellow_900</item>
        <item name="colorOnSecondary">@color/white</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="Theme.DicodingStory" parent="Base.Theme.DicodingStory" />

    <style name="TranslucentStatusBarTheme" parent="Base.Theme.DicodingStory">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BackgroundPrimary">
        <item name="android:background">@color/white</item>
    </style>


    <style name="TSButton">
        <item name="fontFamily">@font/plusjakarta_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TSEditText">
        <item name="fontFamily">@font/plusjakarta_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_900</item>
    </style>

    <style name="TSBody">
        <item name="fontFamily">@font/plusjakarta_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_900</item>
    </style>


    <style name="TSBodySmaller">
        <item name="fontFamily">@font/plusjakarta_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_900</item>
    </style>

    <style name="TSBodyHeader">
        <item name="fontFamily">@font/plusjakarta_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_900</item>
    </style>

    <style name="TSDescription">
        <item name="fontFamily">@font/plusjakarta_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_700</item>
    </style>

    <style name="TSTitle">
        <item name="fontFamily">@font/plusjakarta_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_900</item>
    </style>

    <style name="TSSubTitle">
        <item name="fontFamily">@font/plusjakarta_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_900</item>
    </style>

</resources>